<h2>Welcome <%= user.name %></h2>

<form action="/addWorkout" method="POST">
    <input type="text" name="exercise" placeholder="Exercise" required>
    <input type="number" name="duration" placeholder="Duration" required>
    <input type="number" name="calories" placeholder="Calories" required>

    <button type="submit" name="action" value="dashboard">
        Add Workout
    </button>

    <button type="submit" name="action" value="home">
        Submit & Go Home
    </button>
</form>


<h3>Your Workouts</h3>
<ul>
    <% workouts.forEach(workout => { %>
        <li>
            <%= workout.exercise %> -
            <%= workout.duration %> min -
            <%= workout.calories %> cal
        </li>
    <% }) %>
</ul>
